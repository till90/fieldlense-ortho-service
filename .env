# Deine gefundenen Dienste
BKG_WMS_URL=https://sg.geodatenzentrum.de/wms_dop
BKG_WMTS_URL=https://sg.geodatenzentrum.de/wmts_dop
# Alternative WMTS Capabilities URL (oft stabiler als ?request=GetCapabilities)
BKG_WMTS_CAPS_URL=https://sg.geodatenzentrum.de/wmts_dop/1.0.0/WMTSCapabilities.xml

# Layer/Style optional – wenn leer/auto, wird per Capabilities versucht automatisch zu wählen
BKG_LAYER=auto
BKG_STYLE=auto

# Auth optional (wenn zugangsbeschränkt)
BKG_USER=
BKG_PASS=
BKG_BEARER_TOKEN=

# OSM Context
OSM_TILE_URL=https://tile.openstreetmap.org/{z}/{x}/{y}.png

# Rendering Defaults
DEFAULT_BUFFER_M=50
DEFAULT_SIMPLIFY_M=0
DEFAULT_MAX_DIM_PX=2048
DEFAULT_TARGET_GSD_M=0.20   # 20cm/px Ziel, wird per max_dim begrenzt

# Attribution (unten rechts im PNG)
ATTR_OSM=© OpenStreetMap contributors
ATTR_ORTHO=© GeoBasis-DE / BKG
